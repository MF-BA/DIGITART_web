{% extends 'back.html.twig' %}

{% block title %}Artwork{% endblock %}

{% block body %}
    <h1>Artwork</h1>

    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>IdArt</th>
                <td>{{ artwork.idArt }}</td>
            </tr>
            <tr>
                <th>ArtworkName</th>
                <td>{{ artwork.artworkName }}</td>
            </tr>
            <tr>
                <th>ArtistName</th>
                <td>{{ artwork.artistName }}</td>
            </tr>
            <tr>
                <th>DateArt</th>
                <td>{{ artwork.dateArt ? artwork.dateArt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artwork.description }}</td>
            </tr>
            <tr>
                <th>ImageArt</th>
                <td><img src="{{ asset(artwork.ImageArt) }}" ></td>
            </tr>
            <tr>
                <th>Actions</th>
                <td>  <a href="{{ path('app_artwork_edit', {'idArt': artwork.idArt}) }}">edit</a>

    {{ include('artwork/_delete_form.html.twig') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_artwork_index') }}" class="btn btn-secondary"><i class="fa fa-mail-reply"></i>&nbsp; back To List</a>

  
{% endblock %}
