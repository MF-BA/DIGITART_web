      {# Cin #}
      <div class="row form-group">
        <div class="col col-md-2">
        <strong>Cin</strong>
        </div>
        <div class="col-12 col-md-9">
          {{ form_widget(Facebookregister.cin, {'attr': {'class': 'form-control', 'placeholder': 'Enter cin'}}) }}
          {{ form_errors(Facebookregister.cin,{'attr':{'class':'text-danger'}}) }}
          <small class="form-text text-muted">Cin must contain 8 digits</small>
        </div>
      </div>

      <div class="row form-group">
        <div class="col col-md-2">
          <strong>Birth Date</strong>
        </div>
        <div class="col-12 col-md-9">
          {{ form_widget(Facebookregister.birthDate, {'attr': {'class': 'form-control'}}) }}
          <small class="error-msg-form">{{ form_errors(Facebookregister.birthDate,{'attr':{'class':'text-danger'}}) }}</small>
        </div>
      </div>
    
    
      <div class="row form-group">
        <div class="col col-md-2">
          <strong>Phone Number</strong>
        </div>
        <div class="col-12 col-md-9">
          {{ form_widget(Facebookregister.phoneNum, {'attr': {'class': 'form-control', 'placeholder': 'Enter Phone'}}) }}
          <small class="error-msg-form">{{ form_errors(Facebookregister.phoneNum,{'attr':{'class':'text-danger'}}) }}</small>
          <small class="form-text text-muted">Phone number must contain 8 digits</small>
        </div>
      </div>

      <div class="row form-group">
        <div class="col col-md-2">
          <strong>Password</strong>
        </div>
        <div class="col-12 col-md-9">
          {{ form_widget(Facebookregister.password) }}
          <small class="error-msg-form">{{ form_errors(Facebookregister.password,{'attr':{'class':'text-danger'}}) }}</small>
          <small class="form-text text-muted">Please enter a complex password</small>
        </div>
      </div>


      <div class="row form-group">
        <div class="col col-md-2">
       <strong>Address</strong>
        </div>
