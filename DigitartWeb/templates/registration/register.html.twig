{% block body %}
   <div class="limiter">
		<div class="container-login100">
            <div class="wrap-login100">

    {{ form_start(registrationForm,{attr:{'id': 'registration-form','novalidate':'novalidate'}}) }}
    <span class="login100-form-title">
						Register
					</span>

<fieldset id="step1" class="fieldset">     
  <div class="row form-group">
