{% extends 'base.html.twig' %}

{% block title %}Payment{% endblock %}

{% block body %}
    <h1>Payment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>PaymentId</th>
                <td>{{ payment.paymentId }}</td>
            </tr>
            <tr>
                <th>PurchaseDate</th>
                <td>{{ payment.purchaseDate ? payment.purchaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NbAdult</th>
                <td>{{ payment.nbAdult }}</td>
            </tr>
            <tr>
                <th>NbTeenager</th>
                <td>{{ payment.nbTeenager }}</td>
            </tr>
            <tr>
                <th>NbStudent</th>
                <td>{{ payment.nbStudent }}</td>
            </tr>
            <tr>
                <th>TotalPayment</th>
                <td>{{ payment.totalPayment }}</td>
            </tr>
            <tr>
                <th>Check</th>
                <td>{{ payment.check ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_payment_index') }}">back to list</a>

    <a href="{{ path('app_payment_edit', {'paymentId': payment.paymentId}) }}">edit</a>

    {{ include('payment/_delete_form.html.twig') }}
{% endblock %}
