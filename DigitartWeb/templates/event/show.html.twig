{% extends 'back.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>EventName</th>
                <td>{{ event.eventName }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ event.startDate ? event.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ event.endDate ? event.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NbParticipants</th>
                <td>{{ event.nbParticipants }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ event.detail }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ event.startTime }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="event-image" src="{{ asset('images/' ~ event.image) }}"></td>
</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('app_event_index') }}"><i class="fa fa-reply"></i> Back to list</a>

    <a class="btn btn-primary" href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>

