


<div class="col-lg-6">
                                                    <div class="card">
                                                        <div class="card-body card-block">
                                                            
                                                            {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <div class="input-group-addon">nameRoom</div>
                                                                        {{ form_widget(form.nameRoom) }}
                                                                        <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                                                    </div>
                                                                      {% if form_errors(form.nameRoom) %}
                                                                            <div class="alert alert-danger">{{ form_errors(form.nameRoom) }}</div>
                                                                      {% endif %}
                                                                </div>
                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <div class="input-group-addon">area</div>
                                                                        {{ form_widget(form.area) }}
                                                                        <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                                                    </div>
                                                                    {% if form_errors(form.area) %}
                                                                            <div class="alert alert-danger">{{ form_errors(form.area) }}</div>
                                                                      {% endif %}
                                                                </div>
                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <div class="input-group-addon">state</div>
                                                                        {{ form_widget(form.state) }}
                                                                        <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
                                                                    </div>
                                                                    {% if form_errors(form.state) %}
                                                                            <div class="alert alert-danger">{{ form_errors(form.state) }}</div>
                                                                      {% endif %}
                                                                </div>
                                                                 <div class="form-group">
                                                                    <div class="input-group">
                                                                        <div class="input-group-addon">description</div>
                                                                        {{ form_widget(form.description) }}
                                                                        <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
                                                                    </div>
                                                                     {% if form_errors(form.description) %}
                                                                            <div class="alert alert-danger">{{ form_errors(form.description) }}</div>
                                                                      {% endif %}
                                                                </div>
                                                                <div class="form-actions form-group">
                                                                    <button  class="btn btn-success"><i class="fa  fa-save (alias)"></i>&nbsp;{{ button_label|default('Save') }}</button>
                                                                    <a href="{{ path('app_room_index') }}" class="btn btn-secondary"><i class="fa fa-mail-reply"></i>&nbsp; back To List</a>
                                                                </div>
                                                            {{ form_end(form) }}
                                                         
                                                        </div>
                                                    </div>
                                                
    </div>  

                                                 
