{% extends 'back.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
 
     <div class="content mt-3">
            <div class="animated fadeIn">
                
                <div class="row">
                    
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">List of rooms</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                   <thead>
                                        <tr>
                                            <th>NameRoom</th>
                                            <th>Area</th>
                                            <th>State</th>
                                            <th>Description</th>
                                            <th>createdAt</th>
                                            <th>updatedAt</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for room in rooms %}
                                        <tr>
                                            <td>{{ room.nameRoom }}</td>
                                            <td>{{ room.area }}</td>
                                            <td>{{ room.state }}</td>
                                            <td>{{ room.description }}</td>
                                            <td>{{ room.createdAt ? room.createdAt|date('Y-m-d H:i:s') : ''}}</td>
                                            <td>{{ room.updatedAt ? room.updatedAt|date('Y-m-d H:i:s') : ''}}</td>
                                            <td>
                                                <div class="form-actions form-group">
                                                    <a href="{{ path('app_room_show', {'idRoom': room.idRoom}) }}" class="btn btn-primary"><i class="fa fa-eye"></i>&nbsp;</a>
                                                    <a href="{{ path('app_room_edit', {'idRoom': room.idRoom}) }}" class="btn btn-warning"><i class="fa fa-pencil"></i>&nbsp;</a>
                                                    {{ include('room/_delete_form.html.twig') }}
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="6">no records found</td>
                                        </tr>
                                    {% endfor %}
                                 
                                </table>
                                <a href="{{ path('app_room_new') }}" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp; Add New Room</a>
                            </div>
                        </div>
                    </div>


                </div>
            </div><!-- .animated -->
        </div><!-- .content -->
   

   


  

 
{% endblock %}
