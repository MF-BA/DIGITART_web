}
.input100:focus + .focus-input100 + .symbol-input100 {
  color: #BD2A2E !important;
  padding-left: 28px !important;
}
.login100-form-btn {
  font-family: Montserrat-Bold;
  font-size: 15px;
  line-height: 1.5;
  color: #fff;
